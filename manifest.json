{
    "name": "WhatsPipe",
    "version": "1.0",
    "description": "Whatsapp web button to pipedrive",
    "manifest_version": 2,
    "options_page": "options.html",
    "permissions": ["https://*.pipedrive.com/*", "activeTab", "declarativeContent"],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": ["https://*.pipedrive.com/*"],
            "js": ["main.js"],
            "css": ["style.css"]
        }
    ],
    "web_accessible_resources": ["images/16.png"],
    "browser_action": {
        "default_icon": "images/16.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "images/16.png",
        "32": "images/32.png",
        "48": "images/48.png",
        "64": "images/64.png",
        "128": "images/64.png"
    }
}
